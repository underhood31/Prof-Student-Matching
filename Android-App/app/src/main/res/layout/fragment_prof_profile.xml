<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_square_block"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/profImage"
                android:layout_width="100sp"
                android:layout_height="130sp"
                android:layout_gravity="center"
                android:layout_weight="0"
                tools:ignore="ImageContrastCheck"
                tools:src="@tools:sample/avatars"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/profImagePlaceHolder"
                android:layout_width="100sp"
                android:layout_height="110sp"
                android:visibility="visible"
                android:gravity="center">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="true"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prof_professor_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/roboto_condensed_regular"
                android:gravity="center"
                android:text="Professor Name"
                android:textColor="#FFFDFD"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/profContact"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Contact"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profContactTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/profRoom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Room number"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profRoomTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/profLab"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Lab Name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profLabTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/profDesignation"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Designation"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profDesignationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_no_stroke"
            android:textStyle="bold"
            android:text="Area of Research"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/rounded_corner_no_stroke"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_corner_no_stroke"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/prof_chats"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:text="Chats"
            android:textSize="16sp" />

        <Button
            android:id="@+id/studentList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:text="Student List"
            />

        <ImageButton
            android:id="@+id/prof_add_project_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rounded_button_circle"
            android:backgroundTint="@color/red_end"
            android:contentDescription="AddProject"
            android:cropToPadding="false"
            android:minHeight="48dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="center"
            android:scaleX="1.3"
            android:scaleY="1.3"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="#000000" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>