        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/prof_professor_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/roboto_condensed_regular"
                android:gravity="center"
                android:text="Professor Name"
                android:textColor="#FFFDFD"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/profContact"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Contact"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profContactTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/profRoom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Room number"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profRoomTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/profLab"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Lab Name"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profLabTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:backgroundTint="#e9e9e9"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/profDesignation"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Designation"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/profDesignationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Backend"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_no_stroke"
            android:textStyle="bold"
            android:text="Area of Research"
            android:textColor="#000000"
            android:textSize="25sp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/rounded_corner_no_stroke"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="141dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_corner_no_stroke"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prof_chats"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:text="Chats"
            android:textSize="16sp" />

        <Button
            android:id="@+id/studentList"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:text="Student List" />

        <Button
            android:id="@+id/prof_add_project_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corner_no_stroke"
            android:text="Add Project" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>