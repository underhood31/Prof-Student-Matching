<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Student Name"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/studentStream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Stream"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/studentDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Degree"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewProject">

        <Button
            android:id="@+id/studentUploadResumeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="0.2"
            android:background="@drawable/rounded_button"
            android:text="Upload Resume" />

        <Button
            android:id="@+id/studentDownloadResumeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="0.2"
            android:background="@drawable/rounded_button"
            android:text="Download Resume" />
    </LinearLayout>

    <TextView
        android:id="@+id/listofProjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner"
        android:text="\tList of Projects Applied for"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutResume"
    />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProject"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/listofProjects"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewProject"
        >

        <Button
            android:id="@+id/studentApplyProjectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_button"
            android:text="Apply for a Project"
            android:textAlignment="viewStart" />
    </LinearLayout>
</LinearLayout>